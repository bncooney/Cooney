<Window x:Class="DevMap.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DevMap"
        mc:Ignorable="d"
        Title="DevMap"
        WindowStartupLocation="CenterScreen"
        Width="1280"
        Height="720"
        d:DataContext="{d:DesignInstance local:DesignTimeGlobeViewModel, IsDesignTimeCreatable=True}">
    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Close"
                    Executed="CloseCommand_Executed"/>
    </Window.CommandBindings>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="New" />
                <MenuItem Header="New window" />
                <MenuItem Header="Open..." />
                <MenuItem Header="Save" />
                <MenuItem Header="Save As..." />
                <Separator />
                <MenuItem Header="Exit" Command="ApplicationCommands.Close"/>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Undo" />
                <Separator />
                <MenuItem Header="Cut" />
                <MenuItem Header="Copy" />
                <MenuItem Header="Paste" />
                <MenuItem IsEnabled="False" />
                <Separator />
                <MenuItem Header="Search with browser" />
                <MenuItem Header="Find..." />
                <MenuItem Header="Find Next" />
                <Separator />
                <MenuItem Header="Select All" />
            </MenuItem>
            <MenuItem Header="View"
                      DataContext="{Binding DataContext, ElementName=GameFrame}">
                <MenuItem Header="Zoom In"
                          AutomationProperties.AutomationId="ZoomIn"
                          Command="{Binding ZoomInCommand}" />
                <MenuItem Header="Zoom Out"
                          AutomationProperties.AutomationId="ZoomOut"
                          Command="{Binding ZoomOutCommand}" />
                <Separator />
                <MenuItem Header="City"
                          AutomationProperties.AutomationId="ZoomToCity"
                          Command="{Binding ZoomToCityCommand}" />
                <MenuItem Header="Region"
                          AutomationProperties.AutomationId="ZoomToRegion"
                          Command="{Binding ZoomToRegionCommand}" />
                <MenuItem Header="World"
                          AutomationProperties.AutomationId="ZoomToWorld"
                          Command="{Binding ZoomToWorldCommand}" />
            </MenuItem>
            <MenuItem Header="POI"
                      DataContext="{Binding DataContext, ElementName=GameFrame}">
                <MenuItem Header="Paris"
                          AutomationProperties.AutomationId="GoToParis"
                          Command="{Binding GoToParisCommand}" />
                <MenuItem Header="New York"
                          AutomationProperties.AutomationId="GoToNewYork"
                          Command="{Binding GoToNewYorkCommand}" />
                <MenuItem Header="Sydney"
                          AutomationProperties.AutomationId="GoToSydney"
                          Command="{Binding GoToSydneyCommand}" />
            </MenuItem>
        </Menu>

        <StatusBar DockPanel.Dock="Bottom"
                   DataContext="{Binding DataContext, ElementName=GameFrame}"
                   d:DataContext="{d:DesignInstance local:DesignTimeGlobeViewModel, IsDesignTimeCreatable=True}">
            <StatusBarItem>
                <TextBlock AutomationProperties.AutomationId="ClickCoordinates"
                           Text="{Binding ClickCoordinates}" />
            </StatusBarItem>
            <Separator />
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Go to:" VerticalAlignment="Center" Margin="0,0,4,0" />
                    <TextBox AutomationProperties.AutomationId="NavigateInput"
                             Width="160" Text="{Binding NavigateInput, UpdateSourceTrigger=PropertyChanged}"
                             VerticalAlignment="Center" />
                    <Button AutomationProperties.AutomationId="NavigateGo"
                            Content="Go" Command="{Binding NavigateCommand}" Margin="4,0,0,0" />
                </StackPanel>
            </StatusBarItem>
            <Separator />
            <StatusBarItem>
                <TextBlock AutomationProperties.AutomationId="CameraPosition"
                           Text="{Binding CameraPosition}" />
            </StatusBarItem>
            <Separator />
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Zoom: " VerticalAlignment="Center" />
                    <TextBlock AutomationProperties.AutomationId="ZoomLevel"
                               Text="{Binding ZoomLevel}" VerticalAlignment="Center" />
                </StackPanel>
            </StatusBarItem>
        </StatusBar>

        <Frame x:Name="GameFrame"
               NavigationUIVisibility="Hidden" />
    </DockPanel>
</Window>

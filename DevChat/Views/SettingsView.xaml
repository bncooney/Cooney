<UserControl x:Class="DevChat.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="400">
    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  Padding="24,16">
        <StackPanel MaxWidth="600">
            <TextBlock AutomationProperties.AutomationId="SettingsHeader"
                       Text="Settings"
                       FontSize="24"
                       FontWeight="SemiBold"
                       Margin="0,0,0,24"/>

            <!-- Database section -->
            <TextBlock Text="Database"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Margin="0,0,0,8"/>

            <TextBlock Text="Location"
                       Foreground="{x:Static SystemColors.GrayTextBrush}"
                       Margin="0,0,0,4"/>

            <TextBlock AutomationProperties.AutomationId="DatabasePath"
                       Text="{Binding DatabasePath}"
                       Cursor="Hand"
                       TextDecorations="Underline"
                       Foreground="{x:Static SystemColors.HotTrackBrush}"
                       ToolTip="Open containing folder in Explorer"
                       Margin="0,0,0,4">
                <TextBlock.InputBindings>
                    <MouseBinding MouseAction="LeftClick"
                                  Command="{Binding OpenDatabaseFolderCommand}"/>
                </TextBlock.InputBindings>
            </TextBlock>
        </StackPanel>
    </ScrollViewer>
</UserControl>

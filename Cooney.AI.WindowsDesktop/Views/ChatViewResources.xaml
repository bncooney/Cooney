<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:conv="clr-namespace:Cooney.AI.WindowsDesktop.Converters">

    <!-- Converters with theme-aware brush properties -->
    <conv:SenderToBrushConverter x:Key="SenderToBrushConverter"
        UserBrush="{StaticResource UserMessageBackgroundBrush}"
        BotBrush="{StaticResource BotMessageBackgroundBrush}" />
    <conv:SenderToAlignmentConverter x:Key="SenderToAlignmentConverter" />
    <conv:SenderToForegroundConverter x:Key="SenderToForegroundConverter"
        UserForeground="{StaticResource TextBrightBrush}"
        BotForeground="{StaticResource TextPrimaryBrush}" />
    <conv:SenderToMaxWidthConverter x:Key="SenderToMaxWidthConverter" />
    <conv:MarkdownToFlowDocumentConverter x:Key="MarkdownToFlowDocumentConverter" />

    <!-- Chat message bubble style -->
    <Style x:Key="ChatMessageBorderStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Margin" Value="4,2"/>
    </Style>

    <!-- Read-only RichTextBox for rendered markdown -->
    <Style x:Key="ChatRichTextBoxStyle" TargetType="RichTextBox">
        <Setter Property="IsReadOnly" Value="True"/>
        <Setter Property="IsReadOnlyCaretVisible" Value="False"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        <Setter Property="Cursor" Value="Arrow"/>
    </Style>

</ResourceDictionary>

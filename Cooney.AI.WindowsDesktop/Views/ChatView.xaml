<UserControl x:Class="Cooney.AI.WindowsDesktop.Views.ChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:behaviors="clr-namespace:Cooney.AI.WindowsDesktop.Behaviors"
             xmlns:dt="clr-namespace:Cooney.AI.WindowsDesktop.DesignTime"
             xmlns:emoji="clr-namespace:Emoji.Wpf;assembly=Emoji.Wpf"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=dt:DesignTimeChatViewModel, IsDesignTimeCreatable=True}"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ChatViewResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Chat messages with auto-scroll behavior -->
        <ScrollViewer Grid.Row="0"
                      VerticalScrollBarVisibility="Visible"
                      behaviors:AutoScrollBehavior.ItemsSource="{Binding Messages}">
            <ItemsControl ItemsSource="{Binding Messages}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource ChatMessageBorderStyle}"
                                MaxWidth="{Binding From, Converter={StaticResource SenderToMaxWidthConverter}}"
                                Background="{Binding From, Converter={StaticResource SenderToBrushConverter}}"
                                HorizontalAlignment="{Binding From, Converter={StaticResource SenderToAlignmentConverter}}">
                            <StackPanel>
                                <emoji:RichTextBox Style="{StaticResource ChatRichTextBoxStyle}"
                                                   Foreground="{Binding From, Converter={StaticResource SenderToForegroundConverter}}"
                                                   behaviors:RichTextBoxDocumentBehavior.Document="{Binding RenderedText, Converter={StaticResource MarkdownToFlowDocumentConverter}}"/>
                                <TextBlock Text="{Binding PendingText}"
                                           Foreground="{Binding From, Converter={StaticResource SenderToForegroundConverter}}"
                                           TextWrapping="Wrap"
                                           FontFamily="Segoe UI"
                                           FontSize="14"
                                           Margin="0"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Input area -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5,0,0">
            <TextBox Width="300"
                     Text="{Binding CurrentInput, UpdateSourceTrigger=PropertyChanged}"
                     AcceptsReturn="True"
                     behaviors:EnterKeyCommandBehavior.Command="{Binding SendCommand}" />
            <Button Style="{StaticResource IconButtonStyle}" Tag="&#xE724;" Content="Send"
                    Command="{Binding SendCommand}" Margin="5,0,0,0" ToolTip="Send"/>
            <Button Style="{StaticResource IconButtonStyle}" Tag="&#xE711;" Content="Cancel"
                    Command="{Binding CancelCommand}" Margin="5,0,0,0" ToolTip="Cancel"/>
            <Button Style="{StaticResource IconButtonStyle}" Tag="&#xE74D;" Content="Clear"
                    Command="{Binding ClearCommand}" Margin="5,0,0,0" ToolTip="Clear"/>
        </StackPanel>
    </Grid>
</UserControl>

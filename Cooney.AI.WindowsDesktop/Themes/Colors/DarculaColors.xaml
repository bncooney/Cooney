<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ═══════════════════════════════════════════════════════════════════════
         DARCULA COLOR PALETTE
         Based on IntelliJ IDEA Darcula Theme
         ═══════════════════════════════════════════════════════════════════════ -->

    <!-- Background Colors -->
    <Color x:Key="BackgroundPrimaryColor">#2B2B2B</Color>
    <Color x:Key="BackgroundSecondaryColor">#3C3F41</Color>
    <Color x:Key="BackgroundTertiaryColor">#313335</Color>
    <Color x:Key="BackgroundElevatedColor">#45484A</Color>

    <!-- Text Colors -->
    <Color x:Key="TextPrimaryColor">#BBBBBB</Color>
    <Color x:Key="TextSecondaryColor">#808080</Color>
    <Color x:Key="TextDisabledColor">#606060</Color>
    <Color x:Key="TextBrightColor">#FFFFFF</Color>

    <!-- Accent Colors -->
    <Color x:Key="AccentPrimaryColor">#4A88C7</Color>
    <Color x:Key="AccentSecondaryColor">#589DF6</Color>
    <Color x:Key="AccentHighlightColor">#214283</Color>

    <!-- Chat Message Colors -->
    <Color x:Key="UserMessageBackgroundColor">#365880</Color>
    <Color x:Key="BotMessageBackgroundColor">#3C3F41</Color>

    <!-- Border Colors -->
    <Color x:Key="BorderPrimaryColor">#555555</Color>
    <Color x:Key="BorderSecondaryColor">#323232</Color>
    <Color x:Key="BorderFocusedColor">#4A88C7</Color>

    <!-- Code Block Colors -->
    <Color x:Key="CodeBackgroundColor">#2B2B2B</Color>
    <Color x:Key="CodeForegroundColor">#A9B7C6</Color>

    <!-- Semantic Colors -->
    <Color x:Key="SuccessColor">#6A8759</Color>
    <Color x:Key="WarningColor">#BE9117</Color>
    <Color x:Key="ErrorColor">#CC666E</Color>
    <Color x:Key="InfoColor">#4A88C7</Color>

    <!-- ═══════════════════════════════════════════════════════════════════════
         SOLID COLOR BRUSHES
         ═══════════════════════════════════════════════════════════════════════ -->

    <!-- Background Brushes -->
    <SolidColorBrush x:Key="BackgroundPrimaryBrush" Color="{StaticResource BackgroundPrimaryColor}"/>
    <SolidColorBrush x:Key="BackgroundSecondaryBrush" Color="{StaticResource BackgroundSecondaryColor}"/>
    <SolidColorBrush x:Key="BackgroundTertiaryBrush" Color="{StaticResource BackgroundTertiaryColor}"/>
    <SolidColorBrush x:Key="BackgroundElevatedBrush" Color="{StaticResource BackgroundElevatedColor}"/>

    <!-- Text Brushes -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="{StaticResource TextDisabledColor}"/>
    <SolidColorBrush x:Key="TextBrightBrush" Color="{StaticResource TextBrightColor}"/>

    <!-- Accent Brushes -->
    <SolidColorBrush x:Key="AccentPrimaryBrush" Color="{StaticResource AccentPrimaryColor}"/>
    <SolidColorBrush x:Key="AccentSecondaryBrush" Color="{StaticResource AccentSecondaryColor}"/>
    <SolidColorBrush x:Key="AccentHighlightBrush" Color="{StaticResource AccentHighlightColor}"/>

    <!-- Chat Message Brushes -->
    <SolidColorBrush x:Key="UserMessageBackgroundBrush" Color="{StaticResource UserMessageBackgroundColor}"/>
    <SolidColorBrush x:Key="BotMessageBackgroundBrush" Color="{StaticResource BotMessageBackgroundColor}"/>

    <!-- Border Brushes -->
    <SolidColorBrush x:Key="BorderPrimaryBrush" Color="{StaticResource BorderPrimaryColor}"/>
    <SolidColorBrush x:Key="BorderSecondaryBrush" Color="{StaticResource BorderSecondaryColor}"/>
    <SolidColorBrush x:Key="BorderFocusedBrush" Color="{StaticResource BorderFocusedColor}"/>

    <!-- Code Block Brushes -->
    <SolidColorBrush x:Key="CodeBackgroundBrush" Color="{StaticResource CodeBackgroundColor}"/>
    <SolidColorBrush x:Key="CodeForegroundBrush" Color="{StaticResource CodeForegroundColor}"/>

    <!-- Semantic Brushes -->
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}"/>

</ResourceDictionary>
